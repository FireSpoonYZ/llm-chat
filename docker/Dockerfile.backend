# syntax=docker/dockerfile:1.7
FROM rust:1.88-slim AS builder

RUN apt-get update && apt-get install -y pkg-config libssl-dev && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY backend/ .
COPY migrations/ /migrations/
RUN --mount=type=cache,id=backend-cargo-registry,target=/usr/local/cargo/registry \
    --mount=type=cache,id=backend-cargo-git,target=/usr/local/cargo/git \
    --mount=type=cache,id=backend-rust-target,target=/app/target \
    cargo build --release && cp /app/target/release/claude-chat-backend /app/claude-chat-backend

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y ca-certificates libssl3 && rm -rf /var/lib/apt/lists/*
COPY --from=builder /app/claude-chat-backend /usr/local/bin/claude-chat-backend
COPY migrations/ /app/migrations/

WORKDIR /app
EXPOSE 3000 3001
ENV COOKIE_SECURE=false

CMD ["claude-chat-backend"]
